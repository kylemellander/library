<h3>Library</h3>

<table class="table table-hover">
  <tr>
    <th width="40%">
      Title
    </th>
    <th width="40%">
      Author
    </th>
    <th class="text-right" width="20%">
      Availability
    </th>
  </tr>
  <% @books.each do |book|%>
    <tr<% if book.checked_out? %>class="active"<% end %>>
      <td><%= book.title %></td>
      <td><%= book.authors.first %></td>
      <td><% if book.checked_out?%>Checked-out<% else %>Available<% end %></td>
    </tr>
  <% end %>
</table>
